#NoTitle
NoDefaults
RandomPlacement
OpaqueMove
NoGrabServer
BorderWidth 1
NoHighlight
ShowIconManager
IconManagerGeometry "3840+0-18" 20
IconifyByUnmapping
FramePadding 1
TitleButtonBorderWidth 0
TitlePadding 1
ButtonIndent 0
MenuBorderWidth 1
NoMenuShadows
NoTitleHighlight

Button3 = c m : window : f.delete
Button1 = m : window : f.move
Button3 = m : window : f.resize

Button3 = : root : f.menu "Applications"

Button1 = : iconmgr : f.iconify
Button3 = : iconmgr : f.iconify

IconDirectory "~/.twm/"
RightTitleButton "minimize.xbm" = f.iconify
RightTitleButton "maximize.xbm" = f.fullzoom
RightTitleButton "close.xbm" = f.delete

Function "raise-lower-move" { f.move f.raiselower }
Button1 = : title : f.function "raise-lower-move"

Function "winup" { f.circleup }
"Tab" = m : root|window|frame|title : f.function "winup"

Function "windown" { f.circledown }
"Tab" = s m : root|window|frame|title : f.function "windown"

Color {
	IconManagerBackground "#056839"
	IconManagerForeground "white"
	MenuTitleBackground "#056839"
	MenuTitleForeground "white"
	TitleBackground "#056839"
	TitleForeground "white"
}

menu "Applications" {
	"Applications" f.title
	"aterm" !"aterm +sb -tr -sh 10 -e dash &"
	"urxvt" !"urxvt -e zsh &"
	"xfe" !"xfe &"
	"wifi" !"sudo rc-service wpa_supplicant start & wpa_gui &"
	"porthole" !"porthole &"
	"firefox" !"firefox &"
	"emacs" !"emacs &"
	"gimp" !"gimp &"
	"xfi" !"xfi &"
	"smplayer" !"smplayer &"
	"filezilla" !"filezilla &"
	"engrampa" !"engrampa &"
	"rtorrent" !"aterm +sb -tr -sh 10 -e rtorrent &"
	"weechat" !"aterm +sb -tr -sh 10 -e weechat &"
	"gparted" !"sudo gparted &"
	"lock screen" !"xscreensaver -no-splash & sleep 0.5 && xscreensaver-command -lock &"
	"exit X" !"killall X"
	"sleep" !"sudo hibernate-ram"
	"reboot" !"sudo reboot"
	"shutdown" !"sudo poweroff"
}

IconManagerDontShow {
	"Wine System Tray"
}

NoTitle {
	"TWM Icon Manager"
	"Wine System Tray"
}
